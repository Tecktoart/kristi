  <div class="field">
    <%= f.label 'Услуга' %><br>
    <%= f.text_field :offer,class:'form-control'  %>
  </div>
  <div class="field">
    <%= f.label 'Стоимость' %><br>
    <%= f.number_field :price,class:'form-control'   %>
  </div>
    <div class="field">
    <%= f.label 'Телефон' %><br>
    <%= f.text_field :phone, class:'form-control' %>
  </div>

  <div class="nput-group date">
    <%= f.label 'Дата' %><br>

    <%if @offer.date.nil? %>
   <%= f.text_field :date, data: { provide: 'datepicker' }, class:'form-control'%>
    <%else%><%= f.text_field :date, data: { provide: 'datepicker' },value: @offer.date.strftime('%m/%d/%Y'), class:'form-control' %>
    <%end%>
  </div>
    <br />
    <%= f.submit class:'btn btn-primary' %>

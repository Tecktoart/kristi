<div>
<h1>Listing offers</h1>

</div>
<%= link_to 'New Offer', new_offer_path, class:'btn btn-primary' %>
<h3>Общая выручка: <%=@offers.sum(:price)%> тыс. руб</h3>
<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Offer</th>
      <th>Price</th>
      <th>Phone</th>
      <th>Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @offers.each do |offer| %>
      <tr>
        <td><%= link_to offer.name, offer %></td>
        <td><%= offer.offer %></td>
        <td><%= offer.price %> тыс.руб</td>
        <td> <%=offer.phone%></td>
        <td><%= l(offer.date, format: :long)%> </td>
        <td><%= link_to 'Edit', edit_offer_path(offer), class:'btn btn-default'%></td>
        <td><%= link_to 'Destroy', offer, class:'btn btn-danger',method: :delete%></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
